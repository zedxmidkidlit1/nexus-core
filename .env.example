# NEXUS Core runtime environment template
# Copy values into your shell/session before running the CLI.

# -------------------------
# AI overlay (optional)
# -------------------------

# Master switch
NEXUS_AI_ENABLED=false

# disabled | local | cloud | hybrid_auto
NEXUS_AI_MODE=local

# Request timeout for provider calls
NEXUS_AI_TIMEOUT_MS=8000

# Local provider (Ollama)
NEXUS_AI_ENDPOINT=http://127.0.0.1:11434
NEXUS_AI_MODEL=qwen3:8b

# Cloud provider (Gemini)
NEXUS_AI_GEMINI_ENDPOINT=https://generativelanguage.googleapis.com
NEXUS_AI_GEMINI_MODEL=gemini-2.5-flash
# Set this in your shell/secret manager, do not commit real keys.
NEXUS_AI_GEMINI_API_KEY=

# If false, cloud prompts redact host identifiers (recommended default).
NEXUS_AI_CLOUD_ALLOW_SENSITIVE=false

# -------------------------
# Scan tuning (optional)
# -------------------------
NEXUS_MAX_CONCURRENT_PINGS=200
NEXUS_MAX_SCAN_HOSTS=1024
NEXUS_PING_TIMEOUT_MS=500
NEXUS_PING_RETRIES=1
NEXUS_ARP_MAX_WAIT_MS=3000
NEXUS_ARP_CHECK_INTERVAL_MS=100
NEXUS_ARP_IDLE_TIMEOUT_MS=500
NEXUS_ARP_ROUNDS=2
NEXUS_TCP_PROBE_TIMEOUT_MS=300
# Comma-separated list
NEXUS_TCP_PROBE_PORTS=22,80,443,445,3389
